<apex:page standardController="Class__c">
    <apex:form >
        <apex:pageBlock title="{!$Label.Class_Edit}">
            <apex:pageBlockSection columns="2">
                <apex:inputField value="{!Class__c.Name}"/>
                <apex:inputField value="{!Class__c.Board__c}" />
                <apex:inputField value="{!Class__c.Max_Size__c}" />
                <apex:inputField value="{!Class__c.Contact__c}" />
        	</apex:pageBlockSection>

	    	<apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="{!$Label.Save}"/>
                <apex:commandButton action="{!cancel}" value="{!$Label.Cancel}"/>
    		</apex:pageBlockButtons>
    	</apex:pageBlock>
	</apex:form>
</apex:page>