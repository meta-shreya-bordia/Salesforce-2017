<apex:page standardController="Student__c">

    <script type="text/javascript"> 
    	var closeWindow = function () {
            window.opener.location.href = "/{!$CurrentPage.parameters.Id}";
            window.top.close();
        }; 
    </script>
    
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection >
                <apex:inputField value="{!Student__c.First_Name__c}"/>
                <apex:inputField value="{!Student__c.Last_Name__c}"/>
            </apex:pageBlockSection>
            
            <apex:pageBlockButtons >
                <apex:commandButton action="{! quickSave }" value="{!$Label.Save}" oncomplete="closeWindow()"/>
                <apex:commandButton action="{!cancel}" value="{!$Label.Cancel}" oncomplete="closeWindow()"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>