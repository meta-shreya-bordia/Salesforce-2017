<apex:page standardController="Class__c">
    <apex:form >
    	<apex:pageBlock title="{!Add_Student}">
            <apex:pageBlockSection >
	        	<apex:inputField value="{!student.First_Name__c}"/>
    	        <apex:inputField value="{!student.Last_Name__c}"/>
            </apex:pageBlockSection>
        
            <apex:pageBlockButtons >
                <apex:commandButton value="{!$Label.Add_Student}" action="{!addStudent}"/>
                <apex:commandButton value="{!$Label.Cancel}" action="{!cancel}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>
